<% include ../common/header %>
<link rel="stylesheet" href="css/style.css">
<link rel="stylesheet" href="css/comment.css">
<% include ../common/nav %>
<% include ../common/banner %>
<div class="container">
    <div class="row">
        <ol class="breadcrumb shadow-frame">
            你现在正在浏览：
            <li><a href="/">首页</a></li>
            <li class="active">社区服务</li>
        </ol>
    </div>

    <div class="row commentAll">
        <div class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-1 control-label">留言：</label>
                <div class="col-sm-11">
                    <textarea class="form-control comment-input" rows="5" placeholder="请输入内容"></textarea>
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-12" style="text-align: right;">
                    <button type="submit" class="btn btn-success plBtn">提交留言</button>
                </div>
            </div>
        </div>

        <!--评论区域 -->
        <div class="comment-show">
            <% communityList.forEach(function(item){ %>
                <div class="comment-show-con clearfix">
                    <div class="comment-show-con-img pull-left"><img src="images/default.png" alt=""></div>
                    <div class="comment-show-con-list pull-left clearfix">
                        <div class="pl-text clearfix">
                            <span class="comment-size-name"><%= item.Username %></span>
                            <span class="my-pl-con">&nbsp;<%= item.Content %></span>
                        </div>
                        <div class="date-dz">
                            <span class="date-dz-left pull-left comment-time"><%= moment(item.CreateTime).format('YYYY-MM-DD HH:mm:ss') %></span>
                            <div class="date-dz-right pull-right comment-pl-block">
                                <a href="javascript:;" class="removeBlock" data-id="<%= item.Id %>">删除</a>
                                <a href="javascript:;" class="date-dz-pl pl-hf hf-con-block pull-left" data-id="<%= item.Id %>" data-pid="<%= item.ParentId %>">回复</a>
                                <span class="pull-left date-dz-line">|</span>
                                <a href="javascript:;" class="date-dz-z pull-left" data-id="<%= item.Id %>"><i class="date-dz-z-click-red"></i>赞 (<i
                                        class="z-num"><%= item.PraiseNum %></i>)</a>
                            </div>
                        </div>
                        <!--回复区域 -->
                        <div class="hf-list-con">
                            <% item.Children.forEach(function(children){ %>
                                <div class="all-pl-con">
                                    <div class="pl-text hfpl-text clearfix">
                                        <a href="#" class="comment-size-name"><%= children.Username %> :</a>
                                        <span class="my-pl-con">回复
                                        <a href="#" class="atName">@<%= children.SendUser %></a> : <%= children.Content %>
                                        </span>
                                    </div>
                                    <div class="date-dz">
                                        <span class="date-dz-left pull-left comment-time"><%= moment(children.CreateTime).format('YYYY-MM-DD HH:mm:ss') %></span>
                                        <div class="date-dz-right pull-right comment-pl-block">
                                            <a href="javascript:;" class="removeBlock" data-id="<%= children.Id %>">删除</a>
                                            <a href="javascript:;" class="date-dz-pl pl-hf hf-con-block pull-left" data-id="<%= children.Id %>" data-pid="<%= children.ParentId %>">回复</a>
                                            <span class="pull-left date-dz-line">|</span>
                                            <a href="javascript:;" class="date-dz-z pull-left" data-id="<%= children.Id %>"><i class="date-dz-z-click-red"></i>赞 (<i
                                                    class="z-num"><%= children.PraiseNum %></i>)</a>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                    </div>
                </div>
             <% }) %>
        </div>
    </div>
</div>
<script src="js/jquery.flexText.js"></script>
<script src="js/web/community.js"></script>
<% include ../common/footer %>